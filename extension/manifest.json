{
  "name": "Promptify",
  "description": "Enhance your prompt with a single click.",
  "version": "1.1",
  "manifest_version": 3,
  "host_permissions": ["https://api.groq.com/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://grok.com/*",
        "https://*.canva.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
